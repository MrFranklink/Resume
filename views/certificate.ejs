<!-- certificate.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Certificate</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f5f5f5;
      margin: 0;
      padding: 20px;
      box-sizing: border-box;
    }

    h1 {
      text-align: center;
      color: #333;
      border-bottom: 2px solid #333;
      padding-bottom: 10px;
    }

    p {
      margin: 10px 0;
      color: #555;
    }

    /* Additional styles for specific elements */
    .certificate-details {
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      padding: 20px;
      margin-top: 20px;
    }

    /* Add more styles as needed */
  </style>
</head>
<body>
  <h1>Certificate</h1>
  <div class="certificate-details">
    <p><strong>Name:</strong> <%= certificate.name %></p>
    <p><strong>Email:</strong> <%= certificate.email %></p>
    <p><strong>Mobile:</strong> <%= certificate.mobile %></p>
    <p><strong>Amount:</strong> <%= certificate.amount %></p>
    <p><strong>Number of Trees:</strong> <%= certificate.numberoftree %></p>
    <p><strong>Certificate Number:</strong> <%= certificate.certificateNumber %></p>
  </div>
</body>
</html>
